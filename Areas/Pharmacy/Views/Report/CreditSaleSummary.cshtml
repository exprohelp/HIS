
@{
    ViewBag.Title = "CreditSaleSummary";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<link href="~/Content/css/MenuMaster.css?his-version-1.0" rel="stylesheet" />
<script src="~/Areas/Pharmacy/JsModule/CreditSaleSummary.js"></script>
<style>
    div#skill .circle {
        position: relative;
        height: 25px;
        width: 25px;
        border: 3px solid #ff934c;
        border-top-color: #e60000;
        border-radius: 50%;
        animation: spin 2s linear infinite;
        top: -10px;
        left: -5px;
    }

    div#skill {
        /* background-color: rgba(144, 0, 64, 0.8); */
        color: #fff;
        padding: 9px 0;
        position: absolute;
        display: none;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 5px 0px 10px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .billrecpt {
        font-size: 12px;
        color: #005aff;
        font-weight: bold;
    }

    #tblIPDInfo td {
        font-size: 13px;
        color: #242222;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                                <h4 class="text-white">Credit Sale Summary</h4>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row" style="margin-bottom:1%">
                                            <div class="col-xs-3 flex">
                                                <label style="width:25%">Search : </label>
                                                <input type="text" style="width:55%;border-color:#00a65a;border-radius: 0;" id="txtSearchIPDNO" value="57715" class="form-control" placeholder="IPD Number" autocomplete="off" onkeypress="return EnterKeyPress(event);" maxlength="20" />
                                                <span class="input-group-btn"><button style="height:28px" type="button" class="btn btn-success btnc" onclick="PrintInfoByIPD()"><div id='skill'><div class='circle'></div></div><i class="fa fa-file-pdf-o">&nbsp;</i>PDF</button></span>
                                            </div>
                                            <div class="col-xs-3">
                                                <div class="flex">
                                                    <label style="width: 35%;">From : </label>
                                                    <input type="date" id="txtFilterFrom" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="flex">
                                                    <label style="width: 35%;">To</label>
                                                    <input type="date" id="txtFilterTo" class="form-control" />
                                                    <button id="btnFilter" style="width: 38%;" class="btn btn-warning" onclick="DownloadExcel()"><i class="fa fa-file-excel-o">&nbsp;</i>Excel</button>
                                                    <button style="width: 38%;" class="btn btn-success" onclick="PrintInfo()"><i class="fa fa-file-pdf-o">&nbsp;</i>PDF</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

