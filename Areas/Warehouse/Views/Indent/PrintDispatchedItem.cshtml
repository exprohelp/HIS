@{
    ViewBag.Title = "PrintDispatchedItem";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Warehouse/JsModule/Indent/PrintDispatch.js?his-version-1.1"></script>
<style type="text/css">
    .btn-flat {
        border: none;
        padding: 3px;
    }

    .scroll {
        max-height: 550px;
        overflow: auto;
        overflow-y: auto;
    }

    .panel {
        margin: 5px 3px 0 5px !important;
        border: 1px solid #bedbf6;
    }

    .panel-body {
        border: 1px solid #e1dede;
        padding: 5px 3px 3px 3px !important;
    }

    .form-group {
        margin-bottom: 5px;
    }

        .form-group label {
            padding: 3px 0 4px 10px !important;
        }
</style>


<div id="page-content">
    <div class="panel">
        <div class="panel-body">
            <div class="col-lg-12">
                <div class="form-group row">
                    <label class="col-sm-1">From Date</label>
                    <div class="col-sm-2">
                        <input type="date" id="txtFromDate" class="form-control pickdate" autocomplete="off" />
                    </div>
                    <label class="col-sm-1">To Date</label>
                    <div class="col-sm-2">
                        <input type="date" id="txtToDate" class="form-control pickdate" autocomplete="off" />
                    </div>
                    <label class="col-sm-1">Select Cart</label>
                    <div class="col-sm-3">
                        <select id="ddlCartList" class="form-control"></select>
                    </div>
                    <div class="col-sm-1">
                        <button type="button" id="btnDispDetails" class="btn btn-success">Search</button>
                    </div>
                    <div class="col-sm-1">
                        <button type="button" id="btnPrint" class="btn btn-primary">Print</button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="table-responsive">
                            <div class="scroll">
                                <table class="table table-bordered" id="tblDisptchedLot">
                                    <thead>
                                        <tr>
                                            <th>Lot No</th>
                                            <th>Lot Date</th>
                                            <th>Qty</th>
                                            <th style="width:1%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="table-responsive">
                            <div class="scroll">
                                <input type="hidden" id="hidlotno" />
                                <table class="table table-bordered" id="tblShowdispatchedlist">
                                    <thead>
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Hsn Code</th>
                                            @*<th>lot No</th>*@
                                            <th>Master Key</th>
                                            <th>Qty</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



