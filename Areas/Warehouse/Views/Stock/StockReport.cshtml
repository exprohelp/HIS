
@{
    ViewBag.Title = "StockReport";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Warehouse/JsModule/StockReport/StockReport.js?his-version-1.0"></script>

<style>
    .panel {
        margin: 5px 3px 0 5px !important;
        border: 1px solid #bedbf6;
    }

    .panel-body {
        border: 1px solid #e1dede;
        padding: 5px 3px 3px 3px !important;
    }

    .form-group {
        margin-bottom: 5px;
    }

        .form-group label {
            padding: 3px 0 4px 10px !important;
        }

    input, .input, select, .select {
        border: 1px solid #000 !important;
    }

    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    highlight_row {
        background-color: #d5e7f8;
        color: #000;
    }

    .highlight {
        background-color: red;
    }

    .text-white {
        color: #fff;
    }
</style>

<div id="page-content">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                <h4 class="text-white">Stock Report</h4>
            </div>
            <div class="panel-body" style="background:#fff;">
                <div class="form-group row">
                    <label class="col-sm-1">Select Cart</label>
                    <div class="col-sm-3">
                        <select id="ddlCart" class="form-control"></select>
                    </div>

                    <label class="col-sm-1">Select Item</label>
                    <div class="col-sm-3">
                        <select id="ddlItem" class="form-control"></select>
                    </div>

                    <button type="button" id="btnStock" class="btn btn-success" onclick="return GetStock()">Get Stock</button>
                    <button type="button" id="btnDownload" class="btn btn-warning" onclick="return DownloadExcel()">Download Excel</button>
                    <button type="button" id="btnDownload" class="btn btn-warning" onclick="return ExcelToDataTable()">------</button>
                </div>
            </div>
        </div>
    </div>


    <div class="col-lg-12">
        <div class="panel">           
            <div class="panel-body" style="background:#fff;">
                <div class="table-responsive">
                    <table class="table table-bordered" id="tblSock">
                        <thead>
                            <tr>
                                <th style="width:15%">Cart Name</th>
                                <th style="width:25%">Item Name</th>
                                <th>Manufacturer</th>
                                <th>Batch</th>
                                <th>Exp. Date</th>
                                <th>P. Type</th>
                                <th>P. Qty</th>
                                <th>Qty</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>    

</div>

