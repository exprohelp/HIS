<style>
    ::-webkit-scrollbar {
        width: 3px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #ccc;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: DodgerBlue;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: DodgerBlue;
        }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }
    .scroll{
        box-shadow:1px 2px 12px #ddd;
        background:#fff;
        height:570px;
        overflow:hidden;
        overflow-y:scroll;
        display:block;
    }
    canvas{
       /*height:250px !important;*/
        /*width:300px !important;*/
    }
    .well {
        font-size: 12px;
        min-height: 20px;
        padding: 4px;
        margin-bottom: 20px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
    }
    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    #AdmittedIPDPatient {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 510px;
        display: block;
    }

    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    #ItemList {
        border: 1px solid #c2bebe;
        width: 306px;
        max-width: min-content;
        max-height: 310px;
        /* overflow: scroll; */
        overflow-x: hidden;
        position: absolute;
        z-index: 1;
        background: #fff;
        top: 129px;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-left: 10px;
        border-radius: 3px;
    }

        #ItemList table {
            font-size: 12px;
            line-height: 21px;
            width: 100%;
        }

            #ItemList table td {
                padding: 1px 0px 0px 10px;
            }

            #ItemList table tbody tr {
                max-width: 100%;
                /* padding: 1px 9px; */
                user-select: none;
                -webkit-user-select: none;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                /* border-bottom: 0.1px solid #eaeaea; */
            }

    .panel-body {
        padding: 15px 15px 0px 20px;
        position: relative;
    }

    .table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 5px;
    }

  
</style>
