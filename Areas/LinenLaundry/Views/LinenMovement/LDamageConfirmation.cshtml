
@{
    ViewBag.Title = "LDamageConfirmation";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/LinenLaundry/JsModule/LDamageConfirmation.js"></script>
<style>
    #tblPendingReceive tbody td, #tblPendingReceive thead th {
        padding: 2px 2px;
    }

    .bn {
        border: none;
    }

    .bc {
        border-color: #06a08b;
        border-radius: 0;
    }


    .form-group {
        margin-bottom: 5px;
    }

    .panel-body {
        border: 1px solid #e1dede;
        padding: 5px 3px 3px 3px !important;
    }

    .form-group label {
        padding: 3px 0 4px 10px !important;
    }


    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    .text-white {
        color: #fff;
    }
</style>

<div id="page-content">
    <div class="panel">
        <div class="panel-body" style="height:560px; overflow-y:auto">
            <div class="col-lg-7">
                <div class="">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0;padding:2px;">
                                <h4 class="text-white">Damage Confirmation</h4>
                            </div>
                            <div class="panel-body" style="background:#fff;padding: 8px 20px;">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <input type="text" id="txtSearchProduct" class="form-control" autocomplete="off" placeholder="Search Product.." />
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-success pull-right" onclick="ReceiveInDamage()"><i class="fa fa-sign-in">&nbsp;</i>Receive</button>
                                    </div>
                                </div>
                                <div class="col-md-12" style="margin-top:10px;">
                                    <div class="table-responsive" style="max-height: 500px;margin-top: 20px;">
                                        <table class="table table-condensed" id="tblPendingReceive">
                                            <thead>
                                                <tr>
                                                    <th style="width:5%">S.N.</th>
                                                    <th style="width:10%">Item-Id</th>
                                                    <th style="width: 40%;">Item Name</th>
                                                    <th style="width: 20%;">Remark</th>
                                                    <th style="width: 10%;">Qty</th>
                                                    <th style="width:10%">Rcv. Qty</th>
                                                    <th style="width:1%;white-space:nowrap;padding: 0;"><input type="checkbox" id="chkAll" checked=""></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

