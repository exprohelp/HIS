
@{
    ViewBag.Title = "TestProcessingTime";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Lab/JsModule/Master/TestProcessingTime.js"></script>
<style>
    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-11">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0;padding: 4px; margin-top:10px;">                               
                                <h4 class="text-white">Test Processing Time</h4>                              
                            </div>                           
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="width: 30%;">Category</button>
                                            <select id="ddlCategory" class="form-control bn"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="width: 20%;">Status</button>
                                            <select id="ddlStatus" class="form-control" style="width:68%">
                                                <option value="Y">Active</option>
                                                <option value="N">De-active</option>
                                            </select>&nbsp;&nbsp;
                                            <button class="btn btn-warning bn" style="width: 19%;" onclick="GetTestBySubCategory()"><i class="fa fa-search">&nbsp;</i>Get</button>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <button class="btn btn-success bn" onclick="UpdateProcessingLab()"><sapn class="fa fa-sign-in"></sapn>&nbsp;Save</button>                        
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="scroll" style="max-height: 76vh;  display:block; border:1px solid #2478a9; overflow:auto;padding-bottom:7px;">
                                            <table class="table table-bordered" id="tblTestDetails">
                                                <thead>
                                                    <tr>
                                                        <th style="width:1%;">S.No</th>
                                                        <th style="width:10%;">Test Code</th>
                                                        <th>Test Name</th>
                                                        <th>SampleType</th>
                                                        <th style="width:17%">ProcessingTime &nbsp;<input type="text" style="width: 60px; color:black; background: #dfe8f1;" /></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>