
@{
    ViewBag.Title = "SetDepartmentSequence";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<style>
    .pat-group {
        background: #f3cecca6;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<script src="~/Areas/Masters/JsModule/SetDepartmentSequence.js"></script>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0; display:flex; padding: 1px; justify-content:space-between; margin-top:0px;">
                                <h4 class="text-white">Department List</h4>
                                <button class="btn btn-warning pull-right" onclick="UpdateDepartmentSequence();">Save</button>
                            </div>
                            <div class="panel-body">
                                <div class="scroll" style="height:530px; border:1px solid #00a65a; overflow:auto;padding-bottom:7px;">
                                    <table class="table table-bordered" id="tblDepartmentList">
                                        <thead>
                                            <tr>
                                                <th style="width: 0%; white-space:nowrap;">Seq No</th>
                                                <th style="width: 5%;">Department</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
