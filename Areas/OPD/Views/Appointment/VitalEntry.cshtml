
@{
    ViewBag.Title = "VitalEntry";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/OPD/JsModule/VitalEntry.js?his-version-1.0"></script>
<style>
    .row-green {
        background: #378a45;
        color: #fff;
    }

    .slot-selected {
        background: green !important;
    }

    .timeChoose {
        padding: 3px;
        color: #fff;
        background: #842407;
        border: 1px solid #ddd;
    }

    .TimeFrame {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }

    .TimeSlot-Status {
        padding: 2px;
        color: white;
        background: #064c67;
        border-radius: 5px;
    }

    .TimeSlot-Title {
        align-items: center;
        display: flex;
        border: 1px solid #ddd;
        background: #f1f1f1;
        padding: 4px 6px;
        font-size: 13px;
        font-weight: bold;
        color: #036f98;
    }

    .TimeSlot {
        display: -webkit-inline-box;
        width: 18%;
        margin: 6px 7px;
        box-shadow: 1px 2px 4px #ddd;
        cursor: pointer;
        background: #cccccc;
        color: #fff;
        padding: 2px 22px;
        /* border-top-left-radius: 15px; */
        /* border-bottom-right-radius: 15px; */
        line-height: 22px;
        text-align: center;
    }

        .TimeSlot:hover {
            box-shadow: 1px 2px 4px #4c4646;
            transition: all 0.6s;
        }

    span[disabled] {
        background: #ccc !important;
        cursor: not-allowed !important;
    }

        span[disabled] > .TimeSlot-Status {
            background: #595a58 !important;
        }

    .disabled {
        background: #ddd !important;
    }

    .btn-flat {
        padding: 5px;
        border: navajowhite;
        margin: 0 0 1px 0px;
    }

    .btn-tbl {
        padding: 3px 5px;
        border: navajowhite;
        margin: 0 0 1px 0px;
    }

    .search-section {
        border: 1px solid #ddd;
        background: #ffeaea;
        padding: 5px;
        line-height: 26px;
        text-align: center;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 480px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 20px 3px;
        position: relative;
    }

    .ml15 {
        margin-left: 15px;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    /*input[type=text] {
        height: 18px;
    }*/

    .Vital-title {
        padding-bottom: 5px;
        border: 1px solid #404040;
        text-align: center;
        color: #000;
        font-family: Verdana, Arial, sans-serif;
        font-weight: bold;
    }

    .Vital-body {
        margin-top: 2px;
        border: 1px solid #404040;
        font-family: Verdana, Arial, sans-serif;
    }

    /*.btn-flat {
        border-radius: 2px;
        border: none;
        padding: 0;
    }*/

    #tblVitalSign thead th {
        background: #0076d0;
        color: #fff;
    }

    #tblInfo th {
        font-weight: bold;
    }

    #tblInfo th, #tblInfo td {
        padding: 4px 5px;
        background: #ffffff;
        font-size: 11px;
        border: none;
    }

    .btnNavigation {
        margin-left: 13px;
    }

    .disable {
        pointer-events: none;
        opacity: 0.5;
    }
    .col-md-3 {
        height: 13px;
        width: 25%;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="ml15">
                    <div class="">
