<link href="~/Content/css/MenuMaster.css?his-version-1.0" rel="stylesheet" />
<script src="~/Areas/IPD/JsModule/BillingView/_PrintBill.js"></script>
<style>
    #ddlFilterBy {
        border-radius: 0;
        margin-right: 14px;
        border-color: #00a65a;
        width: 45%;
    }

    #txtSearchIPDNO {
        border-right: none;
        width: 45%;
        border-color: #00a65a;
        border-radius: 0;
    }

    div#skill .circle {
        position: relative;
        height: 25px;
        width: 25px;
        border: 3px solid #ff934c;
        border-top-color: #e60000;
        border-radius: 50%;
        animation: spin 2s linear infinite;
        top: -10px;
        left: -5px;
    }

    div#skill {
        /* background-color: rgba(144, 0, 64, 0.8); */
        color: #fff;
        padding: 9px 0;
        position: absolute;
        display: none;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 5px 0px 10px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .billrecpt {
        font-size: 12px;
        color: #005aff;
        font-weight: bold;
    }

    #tblIPDInfo td {
        font-size: 13px;
        color: #242222;
    }
</style>
<div class="row" style="padding:5px">
    <div class="col-md-12">
        <div class="table-responsive vertiscrl" style="margin-bottom:0;overflow:auto;height:350px;border: 1px solid #2478a9;">
            <table id="tblBillInfo" class="table table-bordered">
                <thead style="background: #00a65a;color: #fff;">
                    <tr>
                        <th style="width:1%"><input type="checkbox" /></th>
                        <th>Receipt No</th>
                        <th>Receipt Date</th>
                        <th class="text-right">Amount</th>
                        <th>Pay Mode</th>
                        <th>Receipt Type</th>
                        <th>Entry By</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12">
        <button class="btn btn-warning" onclick="BillPrint_CategoryWiseOnlyBill()"><i class="fa fa-print">&nbsp;</i>Category Wise</button>
        <button class="btn btn-primary" onclick="BillPrint_ItemWise()"><i class="fa fa-print">&nbsp;</i>Item Wise</button>
        <button class="btn btn-success" onclick="BillPrint_IncludingPackagedItem()"><i class="fa fa-print">&nbsp;</i>Item Wise Including Package Items</button>
        <button class="btn btn-info" onclick="BillPrint_DateWise()"><i class="fa fa-check-circle">&nbsp;</i>Date Wise Bill</button>
    </div>
</div>
