                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body" style="background: #ddd;padding: 1px;">
                <div class="card card-style" style="margin:10px;padding:10px;border-radius:9px;">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="">
                                    <div class="row" style="margin-bottom: 8px;">
                                        <div class="col-xs-4">OT List</div>
                                        <div class="col-xs-8"><select id="ddlOTList" class="form-control" onchange="OTScheduleList();"></select></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-4">Date </div>
                                        <div class="col-xs-8" style="display:flex">
                                            <input type="date" class="form-control" id="txtDate" />
                                        </div>
                                    </div>
                                    <table class="table-condensed" style="width: 100%;font-size:12px;">
                                        <tr>
                                            <th style="width:30%">Search By</th>
                                            <th style="width:5%">:</th>
                                            <td style="width:65%" class="flex">
