                                                    <option>24</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>End Time</th>
                                            <th>:</th>
                                            <td>
                                                <select id="txtToTime" class="form-control">
                                                    <option>Select</option>
                                                    <option>01</option>
                                                    <option>02</option>
                                                    <option>03</option>
                                                    <option>04</option>
                                                    <option>05</option>
