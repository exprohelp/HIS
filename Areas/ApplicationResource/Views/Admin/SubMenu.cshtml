
@{
	ViewBag.Title = "SubMenu";
	Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/ApplicationResource/JsModule/MenuMaster.js?his-version-1.0"></script>
<div id="page-content" style="min-height:280px !important">
	<div class="container">
		@*<div id="page-title">
				<h2>Manage Sub Menu </h2>
				<p>Menu Master.</p>
			</div>*@
		<div class="row">
			<div class="col-md-12 col-md-offset-0">
				<div class="panel">
					<div class="panel-body">
						<div class="col-xs-6">
							<span class="text-pink">Manage Sub Menu</span>
						</div>
						<div class="col-xs-6">
							<div class="fileinput fileinput-new input-group" data-provides="fileinput">
								<input type="text" id="txtSearchSubMenu" class="form-control input_pass" value="" placeholder="Search Sub Menu..">
							</div>
						</div>
						<hr />
						<div class="example-box-wrapper">
							<div class="form-horizontal bordered-row">
								<div class="form-group">
									<div class="col-md-3">
										<div class="fileinput fileinput-new input-group" data-provides="fileinput">
											<select id="ddlRole" class="form-control ddlRole"></select>
										</div>
									</div>
									<div class="col-md-3">
										<div class="fileinput fileinput-new input-group" data-provides="fileinput">
											<select id="ddlMenu" class="form-control ddlMenu"></select>
										</div>
									</div>
									<div class="col-md-3">
										<div class="fileinput fileinput-new input-group" data-provides="fileinput">
											<input type="text" id="txtSubMenuName" class="form-control input_pass" value="" placeholder="Sub Menu Name">
										</div>
									</div>
									<div class="col-md-3">
										<div class="fileinput fileinput-new input-group" data-provides="fileinput">
											<input type="text" id="txtSubMenuUrl" class="form-control input_pass" value="" placeholder="Sub Men Url">
											<span id="btnSaveSubMenu" class="input-group-addon btn btn-primary">
												<i class="fa fa-plus"></i>
											</span>
											<span id="btnUpdateSubMenu" style="display:none" class="input-group-addon btn btn-danger">
												<i class="fa fa-edit"></i>
											</span>
										</div>
									</div>
								</div>
								<div class="scroll">
									<table id="tblSubMenu" class="table table-bordered">
										<thead>
											<tr>
												<th>Sub Menu-ID</th>
												<th>Menu Name</th>
												<th>Sub Menu Name</th>
												<th>Sub Menu Url</th>
												<th>Flag</th>
												<th>Created On</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody></tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</div>

