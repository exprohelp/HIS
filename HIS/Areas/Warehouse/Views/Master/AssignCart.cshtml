
@{
	ViewBag.Title = "AssignCart";
	Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Warehouse/JsModule/Master/AssignCart.js?his-version-1.0"></script>
<style>
	.panel {
		margin: 10px 0 0 15px !important;
	}

	.scroll-table {
		width: 100%;
		max-height: 420px;
		background: #fff;
		overflow: overlay;
		display: block;
	}

	.text-white {
		color: #fff;
	}
</style>

<div id="page-content">
	<div class="row">
		<div class="col-md-12">
			<div class="">
				<div class="panel">
					<div class="panel-heading" style="background:#0076d0;padding:1px 10px;">
						<p class="text-white">Assign Cart</p>
					</div>
					<div class="panel-body" style="background:#fff;">
						<div class="col-xs-2">
							<span class="text-pink">Search Employee : </span>
						</div>
						<div class="col-sm-4">
							<div class="fileinput fileinput-new input-group" data-provides="fileinput" style="display:flex">
								<input type="text" id="txtEmpName" class="form-control input_pass" value="" placeholder="Employee Name">
								<button id="btnGetEmp" class="input-group-addon btn btn-primary" onclick="return SearchEmployee();">
									<i class="fa fa-plus"></i>
								</button>
							</div>
						</div>
						<div class="col-sm-6">
							<div class="fileinput fileinput-new input-group" data-provides="fileinput">
								<select id="ddlEmp" class="form-control">
									<option value="">Select Employee</option>
								</select>
							</div>
						</div>
						<hr />
						<div class="example-box-wrapper">
							<div class="form-horizontal bordered-row">
								<div class="row">
									<div class="col-md-4">
										<input type="text" class="form-control" id="txtSearchCart1" placeholder="Search" />
										<div class="scroll-table">
											<table id="tblwhCartList" class="table table-bordered">
												<thead>
													<tr>
														<th>Select</th>
														<th>Cart Id</th>
														<th>Cart Type</th>
														<th>Cart Name</th>
														<th>Created On</th>
													</tr>
												</thead>
												<tbody></tbody>
											</table>
										</div>
									</div>

									<div class="col-md-1 text-center" style="margin-top:150px">
										<button type="button" onclick="return EmpAsgnToCart();" class="btn btn-xs btn-full btn-warning">>></button>
										<br />
										<button type="button" onclick="return EmployeeDeattachToCart();" class="btn btn-xs btn-full btn-danger"><<</button>
									</div>

									<div class="col-md-7">
										<input type="text" class="form-control" id="txtSearchCart2" placeholder="Search" />
										<div class="scroll-table">
											<table id="tblwhCartListCopy" class="table table-bordered">
												<thead>
													<tr>
														<th>Select</th>
														<th>Employee Code</th>
														<th>Name</th>
														<th>Cart Id</th>
														<th>Cart Type</th>
														<th>Cart Name</th>
														<th>Created On</th>
													</tr>
												</thead>
												<tbody></tbody>
											</table>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


