
@{
	ViewBag.Title = "PrintGoodsReturn";
	Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Warehouse/JsModule/Purchase/PrintGoodsReturn.js?his-version-1.0"></script>
<style>
	.panel {
		margin: 5px 3px 0 5px !important;
		border: 1px solid #bedbf6;
	}

	.panel-body {
		border: 1px solid #e1dede;
		padding: 5px 3px 3px 3px !important;
	}

	.form-group {
		margin-bottom: 5px;
	}

		.form-group label {
			padding: 3px 0 4px 10px !important;
		}

	.selected {
		background: DodgerBlue !important;
		color: #fff;
	}

	highlight_row {
		background-color: #d5e7f8;
		color: #000;
	}

	.highlight {
		background-color: red;
	}

	.text-white {
		color: #fff;
	}
</style>

<div id="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="ml15">
					<div class="">
						<div class="panel">
							<div class="" style="background:#026cbd;padding:2px 4px;">
								<p class="title text-white" style="margin:0">Print Goods Return [GR]</p>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<div class="col-lg-3">
										<label>From</label>
										<input type="date" id="txtFrom" class="form-control" placeholder="dd mm yyy" />
									</div>
									<div class="col-lg-3">
										<label>To</label>
										<input type="date" id="txtTo" class="form-control" placeholder="dd mm yyy" />
									</div>
									<div class="col-lg-3">
										<label style="visibility:hidden">Select Vendor</label>
										<div class="input-group-btn">
											<input type="button" id="btnGet" class="btn btn-primary" onclick="CompleteGoodsReturnInfo()" value="Get" />
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="col-lg-12">
										<div class="table-responsive">
											<br />
											<table class="table table-bordered" id="tblGoodsReturnInfo">
												<thead>
													<tr>
														<th style="width:1%">Action</th>
														<th style="width:17%">Purchase Return Id</th>
														<th style="width:14%">Return Date</th>
														<th style="width:14%">Complete Date</th>
														<th>Vend Name</th>
														<th style="width:1%">Amount</th>
													</tr>
												</thead>
												<tbody></tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>

