
@{
                /**/

                ViewBag.Title = "PurchaseBills";
                Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Warehouse/JsModule/Purchase/PurchaseBills.js?v.1"></script>
<style>
    #modalUpload .modal-content {
        align-content: center;
        height: 130px;
        margin-top: 60%;
        display: block;
        width: 360px;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    .btn-flat {
        padding: 4px;
        border: none;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .panel {
        margin: 5px 3px 0 5px !important;
        border: 1px solid #bedbf6;
    }

    .panel-body {
        border: 1px solid #e1dede;
        padding: 5px 3px 3px 3px !important;
    }

    .form-group {
        margin-bottom: 5px;
    }

        .form-group label {
            padding: 3px 0 4px 10px !important;
        }

    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }

    highlight_row {
        background-color: #d5e7f8;
        color: #000;
    }

    .highlight {
        background-color: red;
    }

    .text-white {
        color: #fff;
    }

    .scrolll {
        max-height: 480px;
        overflow: auto;
        overflow-y: auto;
    }
</style>

<div id="page-content">
    <div class="">
        <div>
            <div class="col-lg-12">
                <div class="">
                    <div class="">
                        <div class="panel">
                            <div class="panel-body" style="background:#fff;padding: 8px 20px;">
                                <div class="form-group">
                                    <div class="col-lg-3">
                                        <label>Select Vendor</label>
                                        <select id="ddlVendor" class="form-control"></select>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>From</label>
                                        <input type="date" id="txtFrom" class="form-control" placeholder="dd mm yyy" />
                                    </div>
                                    <div class="col-lg-3">
                                        <label>To</label>
                                        <input type="date" id="txtTo" class="form-control" placeholder="dd mm yyy" />
                                    </div>
                                    <div class="col-lg-3">
                                        <label style="visibility:hidden">Select Vendor</label>
                                        <div class="input-group-btn">
                                            <input type="button" id="btnGet" class="btn btn-primary" onclick="PurchaseBills()" value="Get" />
                                            <input type="button" id="btnPrint" onclick="Print()" class="btn btn-danger" value="Print" />
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <div class="table-responsive">
                                            <div class="scrolll">
                                                <br />
                                                <table class="table table-bordered" id="tblPurchaseBills">
                                                    <thead>
                                                        <tr>
                                                            <th>Action</th>
                                                            <th>Purch Id</th>
                                                            <th>Inv No</th>
                                                            <th>Inv Date</th>
                                                            <th>Feeding</th>
                                                            <th>Count</th>
                                                            <th>Inv Total</th>
                                                            <th>Inv Tax</th>
                                                            <th>Disc</th>
                                                            <th>Inv Amount</th>
                                                            <th>CGST</th>
                                                            <th>SGST</th>
                                                            <th>IGST</th>
                                                            <th>Attach</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!---Source Modal---->
<div class="modal fade" id="modalUploadDocument" tabindex="-1" role="dialog" aria-labelledby="True">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="margin-top:40%;">
            <div class="panel-heading flex" style="background:#0076d0;padding:1px 5px;">
                <h5 class="text-white">Attach Document</h5>
                <span data-dismiss="modal" class="btn-close">x</span>
            </div>
            <div class="modal-body">
                @Html.Partial("UploadDocumentInfo")
            </div>
        </div>
    </div>
</div>
