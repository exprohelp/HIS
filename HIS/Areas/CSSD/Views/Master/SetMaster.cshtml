
@{
	ViewBag.Title = "SetMaster";
	Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/CSSD/JsModule/Master/SetMaster.js?v1.1"></script>
<style>
	.btn-close {
		right: 5px;
		opacity: 100%;
		position: absolute;
		color: #fff !important;
		font-weight: bold;
		font-size: 12px;
		padding: 0px 6px;
		background: #b92c02;
		height: 16px;
		border-radius: 2px;
		cursor: pointer;
	}

	.flex {
		display: flex !important;
		align-items: center;
	}

	hr {
		margin-top: 35px;
		margin-bottom: 5px;
		border: 0;
		border-top: 1px solid #eee;
	}

	.custom-table {
		width: 100%;
		line-height: 29px;
		font-size: 12px;
	}

	.fileinput.input-group {
		display: flex;
	}

	.text-17 {
		font-size: 17px;
	}

	.btn-flat {
		padding: 2px;
		border: none;
	}

	.scroll {
		width: 100%;
		background: #fff;
		overflow: overlay;
		max-height: 450px;
		display: block;
	}

	.panel-body {
		/*box-shadow: 1px 1px 10px #d2d2d2;*/
		border-radius: 10px;
		padding: 5px 3px 0px 3px;
		position: relative;
	}

	.note {
		list-style: disc;
		color: red;
		font-size: 11px;
		font-weight: bold;
		background: #f7f7f7;
		border: 1px solid #d86c6c;
	}

	.bn {
		margin: 0px;
		font-size: 10pt;
		padding: 0px 10px;
		border-radius: 0;
		text-align: left;
		height: 30px;
	}

	.bc {
		border: 1px solid #00a65a;
		border-radius: 0;
	}
</style>
<div id="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-5">
				<div class="ml15">
					<div class="">
						<div class="panel">
							<div class="panel-heading" style="background:#0076d0;padding: 4px;">
								<h4 class="text-white">Set Master List</h4>
							</div>
							<div class="panel-body">
								<div class="col-xs-3">
									<span class="btn btn-success" onclick="GetItemMasterList()">Load List</span>
								</div>
								<div class="col-xs-3">
									<span class="text-pink">Search</span>
								</div>
								<div class="col-xs-6">
									<div class="fileinput fileinput-new input-group" data-provides="fileinput">
										<input type="text" id="txtSearch" class="form-control input_pass" value="" placeholder="Search...">
									</div>
								</div>
								<hr />
								<div class="example-box-wrapper">
									<div class="form-horizontal bordered-row">
										<div class="table table-responsive">
											<div class="scroll">
												<span data-itemname style="display:none"></span>
												<span data-itemid style="display:none"></span>
												<table id="tblSetMaster" class="table table-bordered">
													<thead>
														<tr>
															<th style="width:1%">Edit</th>
															<th style="width:3%">Set Id</th>
															<th style="width:25%">Set Name</th>
															<th style="width:1%">On/Off</th>
														</tr>
													</thead>
													<tbody></tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-7">
				<div class="">
					<div class="">
						<div class="panel">
							<div class="panel-heading" style="background:#0076d0;padding: 4px;">
								<input type="button" onclick="Clear()" class="btn btn-default" value="New" />
								<span id="txtLinkSetId" class="text-white"></span>
								<h4 class="text-white pull-right">Create Set Master</h4>
							</div>
							<div class="panel-body" style="background:#fff;padding: 8px 20px;">
								<div class="row">
									<div class="col-md-5">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:46%;">Item Type</button>
											<select id="ddlItemType" class="form-control bn">
												<option value="SET">SET</option>
												<option value="CONSUMABLE">CONSUMABLE</option>
											</select>
										</div>
									</div>
									<div class="col-md-7">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:32%;">Department</button>
											<select id="ddlDepartment" class="form-control bn"></select>
										</div>
									</div>
									<div class="col-md-8">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:24%;">Set Name</button>
											<input type="text" id="txtSetName" class="form-control text-uppercase bn" autocomplete="off" maxlength="70" placeholder="Set Name" />
											<span id="txtSetId" style="display:none"></span>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group flex bc">
											<button class="btn btn-success bn" style="width:90%;">Expiry Days</button>
											<input type="text" id="txtExpiryDays" class="form-control bn text-right" data-int autocomplete="off" maxlength="5" placeholder="0" />
										</div>
									</div>
									<div class="col-md-12">
										<div class="form-group flex bc">
											<textarea id="txtDescription" rows="1" placeholder="Description" class="form-control bn"></textarea>
										</div>
									</div>
									<div class="col-md-6">
										<label class="text-danger" style="background: #ffeaea;padding: 3px 8px;">Item Linking to Set&nbsp;<i class="fa fa-arrow-circle-o-down font-size-16"></i></label>
										<hr style="margin-top: 10px;width: 170%;" />
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<button type="button" id="btnSave" class="btn bn btn-primary pull-right" style="border:none"><i class="fa fa-plus">&nbsp;</i>Submit</button>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-7">
										<div class="form-group">
											<label>Choose Item</label>
											<select id="ddlItems" class="form-control bn"></select>
											<span id="txtSetId" style="display:none"></span>
										</div>
									</div>
									<div class="col-md-2">
										<div class="form-group">
											<label>Stock</label>
											<input type="text" id="txtStock" readonly="" data-int class="form-control bn text-right" value="0" />											
										</div>
									</div>
									<div class="col-md-3">
										<label>NOS</label>
										<div class="flex">
											<input type="text" id="txtNOS" data-int class="form-control bn text-right" placeholder="NOS" />
											<button class="btn btn-warning bn" id="btnLink" style="width: 60%;" onclick="SetItemLink()"><i class="fa fa-plus">&nbsp;</i>Link</button>
										</div>
									</div>

									<div class="scroll" style="max-height: 260px;">
										<table class="table table-bordered" id="tblSetItemLink">
											<thead>
												<tr>
													<th style="width:1%">SR.No.</th>
													<th style="width:10%">Item Id</th>
													<th>Item Name</th>
													<th style="width:10%;text-align:right">NOS</th>
													<th style="width:13%">Date</th>
													<th style="width:1%">Action</th>
												</tr>
											</thead>
											<tbody></tbody>
										</table>
									</div>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

