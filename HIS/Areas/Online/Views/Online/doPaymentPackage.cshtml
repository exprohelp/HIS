@using System.Data
@using MediSoftTech_HIS.Areas.Online.Models
@model ipPayU
@{
    ViewBag.Title = "Payment";
    Layout = "~/Areas/Online/Views/Shared/_layout.cshtml";
}
<script src="~/JsModule/global.js?his-version-1.0"></script>
<script src="~/Areas/Online/JsModule/online_payPackage.js?his-version-1.0"></script>
<script src="http://code.jquery.com/jquery-latest.min.js?his-version-1.0" type="text/javascript"></script>
<script id="bolt" src="https://checkout-static.citruspay.com/bolt/run/bolt.min.js?his-version-1.0" bolt-color="e34524" bolt-logo="http://boltiswatching.com/wp-content/uploads/2015/09/Bolt-Logo-e14421724859591.png"></script>
