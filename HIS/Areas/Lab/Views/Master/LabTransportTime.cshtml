
@{
    ViewBag.Title = "LabTransportTime";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Lab/JsModule/Master/LabTransportTime.js"></script>
<style>
    #tblRequestMaster tbody input[type=text] {
        height: 17px;
        margin: 2px -4px;
        border: 1px solid #ababab;
    }

    .flex {
        display: flex;
    }

    .bn {
        border-radius: 0;
        border: none;
    }

    .bc {
        border-radius: 0;
        border-color: #00a65a;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-11">
                <div class="panel">
                    <div class="panel-heading" style="background:#0076d0;padding: 4px;">
                        <h4 class="text-white">Lab Transport Time</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">

                            <div class="col-md-5 flex form-group">
                                <button class="btn-success bn text-left" style="width:25%">From Lab</button>
                                <select class="form-control border-imp" id="ddlFrom" style="width:75%"></select>
                            </div>
                            <div class="col-md-3 flex form-group">
                                <button class="btn-success bn text-left" style="width:40%;font-size:11px;">To Lab</button>
                                <select class="form-control border-imp" id="ddlTo" onc"></select>
                            </div>
                            <div class="col-md-4 flex form-group">
                                <button class="btn-success bn text-left" style="width:22%;font-size:10px;">In Shift</button>
                                <input type="time" id="txtInShift" class="form-control border-imp bc" />
                            </div>
                            <div class="col-md-5 flex form-group">
                                <button class="btn-success bn text-left" style="width:33%">Out Shift</button>
                                <input type="time" id="txtOutShift" class="form-control border-imp bc" />
                            </div>
                            <div class="col-md-7 flex form-group">
                                <button class="btn-success bn text-left" style="width:16%;font-size:9px;">Logistic Time</button>
                                <input type="text" class="form-control border-imp" data-int id="txtLogisticTime" />
                                <button class="btn-success bn text-right" onclick="LabTrasportTime()" style="width:16%"><span class="fa fa-sign-in"></span>&nbsp;Save</button>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin:0px;">
                                <div class="table-responsive" style="max-height:500px;margin-top: 20px; display:block; border:1px solid #00a65a; overflow:auto;padding-bottom:7px;">
                                    <div class="table table-responsive">
                                        <table class="table table-bordered" id="tblLabTrasportTime">
                                            <thead>
                                                <tr>
                                                    <th style="width:1%">S.No</th>
                                                    <th>DispatchLab</th>
                                                    <th>LabCode</th>
                                                    <th>In Shift</th>
                                                    <th>Out Shift</th>
                                                    <th>Logistic Time</th>
                                                    <th>Date</th>
                                                    <th style="width:1%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>