
@{
    ViewBag.Title = "ConsentMaster";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Lab/JsModule/Master/ConsentMaster.js"></script>
<style type="text/css">

    .p {
        margin: 0 !important
    }

    .panel {
        margin-bottom: 5px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 5px 0;
    }

    .form-group {
        margin-bottom: 5px;
    }
  
    h4, .h4, h5, .h5, h6, .h6 {
        margin-top: 2px;
        margin-bottom: 2px;
        color: #fff;
        font-size: 15px;
    }

    .btn-xs {
        height: 20px
    }

    .navbar {
        min-height: 37px;
        margin-bottom: 2px;
    }

    .navbar-form {
        padding: 0;
        margin-top: 4px;
        margin-bottom: 4px;
    }

    .multiselect {
        width: 432px;
        height: 20px;
        border: solid 1px #c0c0c0;
        overflow: auto;
        text-align: left;
        /*margin-top: 22px;*/
        font-size: 12px;
        font-weight: 600;
    }

    .open > .dropdown-menu {
        display: block;
        /*width: 100%;*/
        height: 250px;
        overflow: scroll;
        background: #9bcbfb;
    }

    #cke_1_contents {
        height: 350px !important;
    }
</style>
<div id="page-content">
    <div class="col-lg-3">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Variable Details</h4>
                </div>
                <div class="panel-body" style="height:530px;overflow:auto; border: 1px solid #86b3de;padding: 4px;">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="tblTestDetails">
                            <thead>
                                <tr>
                                    <th style="width:1%">#</th>
                                    <th>Variable Name</th>
                                    <th style="width:1%">cmd</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>PatientName</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Gender</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Age</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>MobileNo</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>Address</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                                <tr>
                                    <td>6</td>
                                    <td>Investigation</td>
                                    <td><input type="checkbox" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="row">
            <div class="panel panel-primary" style="height:490px;">
                <div class="panel-body">
                    <div class="col-sm-12 form-group">
                        <input type="text" style="margin-bottom:6px" id="txtConsentTemplateName" class="form-control" placeholder="Consent Template Name" />
                        <textarea class="form-control" id="txtContent"></textarea>
                        <button onclick="InsertConsentForm()" class="btn btn-warning pull-right" style="margin-top:10px"><i class="fa fa-sign-in">&nbsp;</i>Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    window.onload = function () {
        CKEDITOR.replace('txtContent',
            {
                enterMode: CKEDITOR.ENTER_BR,
                shiftEnterMode: CKEDITOR.ENTER_P,
            });
    }
</script>



