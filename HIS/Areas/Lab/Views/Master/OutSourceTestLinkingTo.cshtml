
@{
    ViewBag.Title = "OutSourceTestLinkingTo";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Lab/JsModule/Master/OutSourceTestLinkingTo.js"></script>

<style>
    .lab-group {
        background: #d2ebfe;
    }

    .cat-group {
        background: #f7c7c7;
    }
    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="panel-heading" style="background-color:#026cbd; color:white; padding: 4px;">
                <h4 class="text-left" style="margin-left:20px;">OutSourceTestLinkingTo</h4>
            </div>
            <div class="col-md-5">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-body">
                                <div class="row">                                   
                                        <div class="col-md-8">
                                            <div class="form-group flex bc">
                                                <button class="btn btn-success bn pull-left" style="width:26%; font-size:9px;">Department</button>
                                                <div class="" style="width:165px;">
                                                    <select id="ddlCategory" class="form-control bn"></select>
                                                </div>
                                                <button class="btn btn-warning bn" onclick="GetTestInfo()">Get</button>
                                            </div>
                                        </div>                                                                 
                                    <div class="col-md-4">
                                        <div class="form-group flex bc">                                           
                                           <input type="text" class="form-control" id="txtTestName" placeholder="SearchByName..." style="font-size:10px;"  />
                                            <button class="btn btn-success bn" onclick="GetTestByName()" style="width:10%"><span class="fa fa-search"></span></button>
                                        </div>
                                    </div>
                                   
                                    <div class="col-md-12">
                                        <div class="scroll" style="height: 450px; display:block; border:1px solid #00a65a; overflow:auto;padding-bottom:7px;">
                                            <table class="table table-bordered" id="tblTestDetails">
                                                <thead>
                                                    <tr>
                                                        <th style="width:1%;">S.No</th>
                                                        <th style="width:10%;">Test Code</th>
                                                        <th style="width:23%">Test Name</th>
                                                        <th style="width:2%"><input type="checkbox"  /></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1" style="margin-top: 18%;">
                <span id="btnUnAllotSubmenu" onclick="DeleteTest()" class="btn btn-danger"><<</span>
               <span id="btnAllotSubmenu" onclick="LinkTestToLab()" class="btn btn-success" style="width:34px;position:absolute;margin-top:1%">>></span>
            </div>
            <div class="col-md-6">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="width:39%; font-size:11px;">Processing Lab</button>
                                            <select id="ddlLab" class="form-control bn" onchange="GetTestByLab()"  style="width:100%;"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <button class="btn btn-warning bn" onclick="GetTestByLab()"><span class="fa fa-search"></span>Search</button>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="scroll" style="height: 450px;display:block; border:1px solid #00a65a; overflow:auto;padding-bottom:7px;">
                                            <table class="table table-bordered" id="tblTestLinkToLab">
                                                <thead>
                                                    <tr>
                                                        <th style="width:1%;">S.No</th>
                                                        <th style="width:10%;">Test Code</th>
                                                        <th style="width:23%">Test Name</th>
                                                        <th style="width:2%"><input type="checkbox"  /></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>