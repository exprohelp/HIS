
@{
    ViewBag.Title = "LabRegister";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Lab/JsModule/LabRegister.js"></script>

<style>
    .pat-group {
        background: #f3cecca6;
    }

    .btn-close {
        right: 5px;
        opacity: 100%;
        position: absolute;
        color: #fff !important;
        font-weight: bold;
        font-size: 12px;
        padding: 0px 6px;
        background: #b92c02;
        height: 16px;
        border-radius: 2px;
        cursor: pointer;
    }

    .flex {
        display: flex !important;
        align-items: center;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }

    .fileinput.input-group {
        display: flex;
    }

    .text-17 {
        font-size: 17px;
    }

    .btn-flat {
        padding: 2px;
        border: none;
    }

    .scroll {
        width: 100%;
        background: #fff;
        overflow: overlay;
        max-height: 450px;
        display: block;
    }

    .panel-body {
        /*box-shadow: 1px 1px 10px #d2d2d2;*/
        border-radius: 10px;
        padding: 5px 3px 0px 3px;
        position: relative;
    }

    .note {
        list-style: disc;
        color: red;
        font-size: 11px;
        font-weight: bold;
        background: #f7f7f7;
        border: 1px solid #d86c6c;
    }

    .bn {
        margin: 0px;
        font-size: 10pt;
        padding: 0px 10px;
        border-radius: 0;
        text-align: left;
        height: 30px;
    }

    .bc {
        border: 1px solid #00a65a;
        border-radius: 0;
    }
</style>
<div id="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="ml15">
                    <div class="">
                        <div class="panel">
                            <div class="panel-heading" style="background:#0076d0; margin-top: -13px;  padding: 4px; margin-top:0px;">
                                <h4 class="text-white">Lab Register</h4>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-2" style="margin-top:5px;">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="width: 70%;">IPOP Type</button>
                                            <select id="ddlIPOPType" class="form-control bn">
                                                <option value="ALL">ALL</option>
                                                <option value="IPD">IPD</option>
                                                <option value="OPD">OPD</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-2" style="margin-top:5px;">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="">From</button>
                                            <input type="date" id="txtFrom" class="form-control" style="width:82%;  font-size:11px; " />
                                        </div>
                                    </div>                             
                                    <div class="col-md-2" style=" margin-top:5px;">
                                        <div class="form-group flex bc">
                                            <button class="btn btn-success bn" style="">To</button>
                                            <input type="date" id="txtTo" class="form-control" style="width: 86%;  font-size:11px; " />
                                            <button class="btn btn-warning bn" onclick="LabRegister()" style="width:36%;"><span class="fa fa-sign-in">&nbsp;</span>Get</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="scroll" style="min-height:500px;  display:block; border:1px solid #2478a9; overflow:auto;padding-bottom:7px;">
                                    <table class="table table-bordered" id="tblLabRegister">
                                        <thead>
                                            <tr>
                                                <th style="width:1%;">#</th>
                                                <th>IPOP Type</th>
                                                <th>IPOP No</th>
                                                <th>Visit No</th>
                                                <th>Register Date</th>
                                                <th>Patient Name</th>
                                                <th>Age/Gender</th>
                                                <th>Test List</th>
                                                <th>Doctor Name</th>                                               
                                                <th>Panel Name</th>                                               
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

