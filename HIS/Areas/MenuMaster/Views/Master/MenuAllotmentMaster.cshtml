									</div>
								</div>
								<div class="col-sm-5">
									<ul id="AllotedRoleToEmp" style="display:none"></ul>
									<div class="example-box-wrapper">
										<div class="panel-group" id="accordion">
											<div class="panel" id="roleAllotedPanel">
											</div>
										</div>
									</div>
									@*<ul id="AllotedMenuList"></ul>*@
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
