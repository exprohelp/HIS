<script src="~/Areas/IPD/JsModule/NursingView/_ServiceBooking.js"></script>
<style>
    label.doctor {
        width: 35%;
        background: #3c8dbc;
        height: 28px;
        text-align: center;
        padding: 4px;
        color: #fff;
    }

    hr {
        margin-top: 35px;
        margin-bottom: 5px;
        border: 0;
        border-top: 1px solid #eee;
    }

    .custom-table {
        width: 100%;
        line-height: 29px;
        font-size: 12px;
    }


    .selected {
        background: DodgerBlue !important;
        color: #fff;
    }


    #ItemList {
        border: 1px solid #c2bebe;
        width: 373px;
        max-width: 500px;
        max-height: 310px;
        overflow: hidden;
        overflow-y: auto;
        position: absolute;
        z-index: 999;
        background: #fff;
        top: 28px;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-left: 0px;
        border-radius: 3px;
    }


        #ItemList table {
            font-size: 12px;
            line-height: 21px;
            width: 100%;
        }

            #ItemList table td {
                padding: 1px 0px 0px 10px;
            }

            #ItemList table tbody tr {
                max-width: 100%;
                /* padding: 1px 9px; */
                user-select: none;
                -webkit-user-select: none;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                /* border-bottom: 0.1px solid #eaeaea; */
            }


    .panel-body {
        padding: 15px 15px 0px 20px;
        position: relative;
    }

    .table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 5px;
    }

    #ProductList {
        border: 1px solid #2478a9;
        width: 99%;
        line-height: 22px;
        height: 180px;
        font-size: 12px;
        display: block;
        overflow: auto;
    }

    .msg {
        color: #ffffff;
        background: #dd8803;
        width: max-content;
        padding: 5px 14px;
        position: absolute;
        bottom: 39px;
        z-index: 10;
        left: 11px;
        border-radius: 2px;
        display: none;
    }

        .msg span {
            background: #ff0049;
            padding: 2px;
            border-radius: 20px;
            width: 13px;
            height: 13px;
            font-size: 9px;
            position: absolute;
            right: 0;
            top: 0;
            text-align: center;
            cursor: pointer;
        }

    .col-md-3, .col-md-4 {
        padding: 0;
    }

    .example-box-wrapper {
        margin: 10px 20px;
    }
</style>
<div class="example-box-wrapper">
    <div class="row">
        <div class="col-md-4">
            <div style="display:flex">
                <label class="doctor">Doctor </label>
                <div style="width:100%">
                    <select class="form-control" id="ddlDoctor">
                        <option>Choose Doctor </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div style="display:flex">
                <label class="doctor">Category </label>
                <div style="width:100%">
                    <select class="form-control" onchange="GetSubCategory()" id="ddlCategory">
                        <option>Choose Category </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4" style="margin-left:3px;width: 31.7%;">
            <div style="display:flex">
                <label class="doctor">Sub Category </label>
                <div style="width:100%">
                    <select class="form-control" id="ddlSubCategory" onchange="ItemSearch('Service:ItemListBySubCat')" >
                        <option>Choose Sub Category </option>
                    </select>
                </div>
            </div>
        </div>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-7" style="padding:0">
            <div class="table table-responsive">
                <div id="ProductList">
                    <table id="tblItemInfo" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    <div style="display:flex">
                                        <input type="text" id="txtDBSearch" style="height:20px;" class="form-control" placeholder="Direct Search.." />
                                        <input type="text" id="txtFilterSearch" style="height:20px;margin-left: 9px;" class="form-control" placeholder="Filter Item.." />
                                    </div>
                                </th>
                                <th>SubCatName</th>
                                <th style="width: 1px;">CMD</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-5" style="padding:0">
            <div class="table table-responsive">
                <div id="ProductList">
                    <table id="tblBookingInfo" class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 1px;">SNo.</th>
                                <th>Item Name</th>
                                <th style="width: 15%;" class="text-right">Qty</th>
                                <th style="width: 2%;">IsUrgent</th>
                                <th style="width: 1px;">CMD</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin:10px 0">
        <div class="col-md-3">
            <div style="display:flex;align-items: baseline;">
                <label style="width: 32%;">From : </label>
                <input type="date" id="txtFrom" value="1" class="form-control" style="border-radius:0;border-color:#00a65a" />
            </div>
        </div>
        <div class="col-md-4" style="width: 23%;margin:0 11px">
            <div style="display:flex;align-items: center;">
                <label style="width: 20%;">To : </label>
                <input type="date" id="txtTo" value="1" class="form-control" style="border-radius:0;border-color:#00a65a" />
                <button class="btn btn-success" onclick="BookingInfoByIPDNo()" style="height: 28px;margin: 0;border-radius: 0;width: 35%;"><i class="fa fa-sign-in">&nbsp;</i>Get</button>
            </div>
        </div>

        <div class="col-md-5 form-group" style="width: 49%;">
            <button class="btn btn-success" onclick="ItemInsert()" style="height: 28px;margin: 0;border-radius: 0;float: right;"><i class="fa fa-sign-in">&nbsp;</i>Save</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="padding:0">
            <div class="table table-responsive">
                <div id="ProductList" style="height:213px">
                    <table id="tblServiceBookingInfo" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Date</th>
                                <th>Item Id</th>
                                <th>Item Name</th>
                                <th>Qty</th>
                                <th>Sub Category</th>
                                <th>Doctor Name</th>
                                <th style="width:1%">CMD</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

