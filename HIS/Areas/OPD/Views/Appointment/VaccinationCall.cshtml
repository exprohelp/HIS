                                                    <th>Planning Date</th>                                                   
                                                    <th>Call By</th>
                                                    <th>Call Date</th>                                                                                                  
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalVaccineInfo" role="dialog">
    <div class="modal-dialog modal-lg" style="width:845px">
        <div class="modal-content" style="margin-top: 2%;height:520px">
            <!-- Modal Header -->
            <div class="modal-header bg-success" style="background: #2478a9;color:#fff;padding:5px;">
                <h4 class="modal-title" style="font-size:15px;">
                    <span class="text-white">Vaccination Info</span>
                    <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                </h4>
            </div>

            <!-- Modal body -->
            <div class="modal-body" style="padding: 2px 6px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="category" style="padding:0px 0px 5px 0px;">
                            <span class="title">Vaccination Schedule</span> <span class="">                              
                                <button onclick="GetSchedule('GetVaccineInfo:ALL')" class="btn btn-success" style="margin-left: 10px;"><i class="fa fa-sign-in">&nbsp;</i>ALL</button>
                                <button onclick="GetSchedule('GetVaccineInfo:Vaccinated')" class="btn btn-primary"><i class="fa fa-sign-in">&nbsp;</i>Vaccinated</button>
                                <button onclick="GetSchedule('GetVaccineInfo:Pending')" class="btn btn-warning"><i class="fa fa-sign-in">&nbsp;</i>Pending</button>
                            </span>
                        </div>
                        <div style="height: 380px;overflow:auto;margin-bottom:5px;border: 1px solid #2478a9;">
                            <table class="table table-bordered MedicineTemplate" id="tblVaccinationScheduleInfo">
                                <thead>
                                    <tr>
                                        <th style="width: 2%;">#</th>
                                        <th>Vaccine Id</th>
                                        <th>Vaccine Name</th>
                                        <th style="width: 18%;">Schedule Date</th>
                                        <th style="width: 18%;">Planned From</th>
                                        <th style="width: 18%;">Planned To</th>
                                        <th style="width: 18%;">Vaccination Date</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

