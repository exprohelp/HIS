
@{
	Layout = null;
}


<!DOCTYPE html>
<html>
<head>
	<title>Track Ambulance</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="theme-color" content="#337ab7" />
	<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
	<meta name="msapplication-navbutton-color" content="#337ab7" />
	<meta name="apple-mobile-web-app-status-bar-style" content="#337ab7" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
	<script src="~/JsModule/global.js"></script>
	@*<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>*@
	@*<link rel="stylesheet" type="text/css" href="./style.css" />
		<script type="text/javascript" src="http://code.jquery.com/jquery-1.11.0.min.js"></script>*@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


	<style>
		#map {
			height: 600px;
		}

		html,
		body {
			height: 100%;
			margin: 0;
			padding: 0;
		}

		.track {
			margin-top: 2px;
			margin-left: 18px;
			margin-right: 18px;
		}

		#tblInfo td, #tblInfo th {
			padding: 1px;
		}

		.btnTrack {
			background: #f5f5f5;
			border-radius: 25px;
			border: 1px solid #ff832b;
			color: green;
			font-weight: bold;
			margin-left: 10px;
		}
	</style>
</head>
<body>
	<div class="row">
		<div class="track">
			<div class="panel panel-primary">
				<div class="panel-heading" style="padding: 5px;text-align:center">
					<button id="btnTrack" class="btn btn-warning btn-xs" onclick="window.location.reload()"><i class="fa fa-refresh">&nbsp;</i>Refresh Location</button>
					<img id="imgRed" src="~/Content/logo/red.gif" style="width:20px;" />
					<img id="imgGreen" src="~/Content/logo/green.gif" style="width:20px;display:none;" />
					<button id="btnSubmitLocation" class="btn btn-success btn-xs" disabled onclick="UpdateLatLaong()"><i class="fa fa-sign-in">&nbsp;</i>Submit Location</button>

					@*<button id="btnTrack" class="btn btn-warning btn-xs" onclick="calcRoute()">Track Ambulance</button>*@

				</div>
				<div class="panel-body" style="padding: 0px 5px;">
					<div class="row">
						<div class="col-xs-12">
							<table class="table-condensed" id="tblInfo" style="width:100%;margin:5px 0">
								<tr>
									<th>Request Id</th>
									<th>:</th>
									<td id="txtRequestId">XXXXXXXXXXXX</td>
								</tr>
								<tr>
									<th>Name</th>
									<th>:</th>
									<td id="txtName">XXXXXXXXXXXX</td>
								</tr>
								<tr id="DriverName">
									<th>Driver Name</th>
									<th>:</th>
									<td id="txtDriverName">XXXXXXXXXXXX</td>
								</tr>
								<tr id="DriverMobile">
									<th style="width: 28%;">Driver Mobile</th>
									<th>:</th>
									<td id="txtDriverMobile">XXXXXXXXXXXX</td>
								</tr>
								<tr>
									<th>Address</th>
									<th>:</th>
									<td id="txtAddress">XXXXXXXXXXXX</td>
								</tr>
								<tr>
									<th>Status</th>
									<th>:</th>
									<td id="txtStatus">XXXXXXXXXXXX</td>
								</tr>
							</table>
							<div id="map"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Async script executes immediately and must be after any DOM elements used in callback. -->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyADa2DuwUeAJOCgRMlnDcmLcVpphP21daU&callback=initialize&v=weekly?sensor=false" async></script>
	<script src="~/Areas/PatientDesk/JsModule/TrackAmbulance.js?v1.3"></script>
	<script src="~/Areas/PatientDesk/JsModule/TrackAmbulanceAssets.js?v1.3"></script>
</body>
</html>


