
@{
    ViewBag.Title = "StateDistrict";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Masters/JsModule/StateDistrict.js"></script>
<style>
    .panel {
        margin-bottom: 2px !important;
        margin-left: 2px !important;
    }

    .panel-heading {
        padding: 1px 5px;
    }

    .panel-body {
        padding: 2px 0;
        margin-top: 1px;
    }

    .form-group {
        margin-bottom: 5px;
    }

    .form-control {
        height: 20px;
        padding: 2px !important
    }

    h4, .h4, h5, .h5, h6, .h6 {
        margin-top: 2px;
        margin-bottom: 2px;
        color: #fff;
        font-size: 15px;
    }
</style>
<div id="page-content">
    <div class="col-lg-6">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Add State</h4>
                </div>
                <div class="panel-body" id="divState">
                    <div class="col-sm-4 form-group">
                        <label>Select Country</label>
                        <select id="ddlCountry" class="form-control" style="border:1px solid #86b3de;"></select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>State Name</label>
                        <input type="text" id="txtStateName" class="form-control" style="border:1px solid #86b3de" />
                    </div>
                    <div class="col-sm-3 form-group">
                        <input type="hidden" id="hidStateautoid" />
                        <button type="submit" id="btndaddupdateState" style="margin: 21px 0 0 0;" class="btn btn-xs btn-success" value="Save" onclick="AddUpdateState()">Save</button>
                        <button type="submit" id="btnShowAllState" style="margin: 21px 0 0 0;" class="btn btn-xs btn-warning" value="Show All" onclick="BindState()">Show All</button>
                    </div>
                </div>

                <div class="panel-heading">
                    <div style="display:flex">
                        <h4 style="width:20%">State Details </h4> <input type="text" id="txtSeachState" class="form-control" style="width:80%" placeholder="Search State" />
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive" style="height:450px;overflow-y:auto">
                        <table class="table table-bordered" id="tblStateDetails">
                            <thead>
                                <tr>
                                    <th style="width:84%">State Name</th>
                                    <th style="width:8%">Action</th>
                                    <th style="width:8%">Edit</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>

    </div>

    <div class="col-lg-6">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Add District </h4>
                </div>
                <div class="panel-body" id="divDistrict">
                    <div class="col-sm-4 form-group">
                        <label>Select State</label>
                        <select id="ddlState" class="form-control" style="border:1px solid #86b3de;"></select>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label>District Name</label>
                        <input type="text" id="txtDistrictName" class="form-control" style="border:1px solid #86b3de" />
                    </div>
                    <div class="col-sm-3 form-group">
                        <input type="hidden" id="hiddistrictautoid" />
                        <input type="hidden" id="hidstateid" />
                        <button type="submit" id="btndaddupdatedistrict" style="margin: 21px 0 0 0;" class="btn btn-xs btn-success" value="Save" onclick="AddUpdateDistrict();">Save</button>
                        <button type="submit" id="btnshowalldistrict" style="margin: 21px 0 0 0;" class="btn btn-xs btn-warning" value="Show All" onclick="BindDistrict();">Show All</button>
                    </div>

                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div style="display:flex">
                        <h4 style="width:25%">District Details </h4> <input type="text" id="txtSeachDistrict" class="form-control" style="width:75%" placeholder="Search Subcategory" />
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive" style="height:450px;overflow-y:auto">
                        <table class="table table-bordered" id="tblDistrictDetails">
                            <thead>
                                <tr>
                                    <th style="width:92%">District Name</th>
                                    <th style="width:8%">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

